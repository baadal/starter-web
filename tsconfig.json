{
  "compilerOptions": {
    "outDir": "./build/ts/",
    "typeRoots": [
      "./starter/typings",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "@emotion/react/types/css-prop"
    ],
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "jsx": "react",
    "paths": {
      "src/*": ["src/*"],
      "starter/*": ["starter/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./api/**/*",
    "./starter/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "starter/config"
  ]
}
