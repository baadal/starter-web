    "xhr2": "^0.2.1"
  },
  "browserslist": [
    "cover 97%",
    "chrome >= 23",
    "firefox >= 21",
    "edge >= 12",
    "safari >= 6",
    "ios_saf >= 6",
    "opera >= 15",
    "not ie 11",
    "not dead"
  ],
  "sideEffects": [
    "./starter/sticky/**"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  }
}
