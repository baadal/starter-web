    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@loadable/component": "^5.15.0",
    "@loadable/server": "^5.15.0",
    "caniuse-lite": "^1.0.30001241",
    "compression": "^1.7.4",
    "core-js": "^3.15.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
