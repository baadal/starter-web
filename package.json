    "pretty-ms": "^7.0.1",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "reload": "^3.2.0",
    "rimraf": "^3.0.2",
