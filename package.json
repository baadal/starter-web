    "@emotion/styled": "^11.0.0",
    "@loadable/component": "^5.14.1",
    "@loadable/server": "^5.14.0",
    "caniuse-lite": "^1.0.30001171",
    "compression": "^1.7.4",
    "core-js": "^3.8.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "file-type": "^16.1.0",
    "intersection-observer": "^0.12.0",
    "mime-types": "^2.1.28",
    "raf": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "reload": "^3.1.1",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "semver": "^7.3.4",
    "serialize-javascript": "^5.0.1",
    "ua-parser-js": "^0.7.23",
    "whatwg-fetch": "^3.5.0",
    "xmlhttprequest": "^1.8.0"
  },
  "browserslist": [
    "cover 97%",
    "chrome >= 23",
    "firefox >= 21",
    "edge >= 12",
    "safari >= 6",
    "ios_saf >= 6",
    "opera >= 15",
    "not ie 11",
    "not dead"
  ],
  "sideEffects": [
    "./sticky_modules/**"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  }
}
