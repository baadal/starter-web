{
  "name": "starter-web",
  "version": "0.2.0",
  "description": "React starter kit for building modern Web Apps",
  "private": true,
  "scripts": {
    "webpack": "webpack --config starter/config/webpack/webpack.config.ts",
    "build:client": "npm run webpack",
    "build:server": "cross-env PLATFORM=server npm run webpack",
    "build:client:watch": "npm run webpack -- --watch",
    "build:server:watch": "cross-env PLATFORM=server npm run webpack -- --watch",
    "build:all": "run-p --silent build:client build:server",
    "build:all:watch": "run-p --silent build:client:watch build:server:watch",
    "build": "npm run -s clean && npm run build:all",
    "launch:server": "nodemon --quiet --watch build/server --exec 'node build/server/index.js'",
    "launch:server:wait": "wait-on build/server/index.js && npm run launch:server",
    "build:api": "cross-env PLATFORM=server webpack --config starter/config/webpack/webpack.api.ts",
    "launch:api": "nodemon --quiet --watch build/api --exec 'node build/api/index.js'",
    "launch:api:watch": "cross-env PLATFORM=server webpack --config starter/config/webpack/webpack.api.ts --watch",
    "start:all": "run-p --silent build:all:watch launch:server:wait launch:api:watch type-check:watch",
    "start": "npm run -s clean && npm run start:all",
    "build-ts": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "css-lint": "stylelint 'src/**/*.{css,scss}'",
    "css-lint:fix": "npm run css-lint -- --fix",
    "clean": "npx rimraf build node_modules/.cache",
    "clean:all": "npx rimraf build node_modules package-lock.json",
    "prepare": "husky install starter/config/husky",
    "pre-commit": "lint-staged",
    "blame": "git log -S",
    "hist": "git log --oneline | grep -i",
    "follow": "git log --follow",
    "blist": "npx browserslist",
    "blist:coverage": "npx browserslist --coverage",
    "blist:update": "npx browserslist@latest --update-db",
    "ncu": "ncu",
    "ncuu": "ncu -u",
    "check-env": "node -e 'console.log(process.env)' | grep npm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baadal/starter-web.git"
  },
  "author": "Abhishek Raj <abhi@raj.me>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/dotenv-webpack": "^7.0.2",
    "@types/express": "^4.17.12",
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/node": "^16.0.0",
    "@types/nodemon": "^1.19.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-loader": "^8.2.2",
    "browserslist": "^4.16.6",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.6",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "ignore-emit-webpack-plugin": "^2.0.6",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^2.1.0",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.8",
    "nodemon-webpack-plugin": "^4.5.2",
    "npm-check-updates": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^6.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "wait-on": "^6.0.0",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "core-js": "^3.15.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "rxjs": "^7.1.0",
    "xhr2": "^0.2.1"
  },
  "browserslist": [
    "cover 97%",
    "chrome >= 23",
    "firefox >= 21",
    "edge >= 12",
    "safari >= 6",
    "ios_saf >= 6",
    "opera >= 15",
    "not ie 11",
    "not dead"
  ],
  "sideEffects": [
    "./starter/sticky/**"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  }
}
