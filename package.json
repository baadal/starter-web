{
  "name": "starter-web",
  "version": "0.2.0",
  "description": "React starter kit for building modern Web Apps",
  "private": true,
  "scripts": {
    "webpack": "webpack --config config/webpack.config.ts",
    "analyze": "cross-env NODE_ENV=production BUNDLE_ANALYZE=true npm run webpack",
    "sync": "tsc starter/verify.ts --target es5 --esModuleInterop --resolveJsonModule && mv -t scripts starter/*.js",
    "build:client": "npm run webpack",
    "build:server": "cross-env PLATFORM=server npm run webpack",
    "build:client:watch": "npm run webpack -- --watch",
    "build:server:watch": "cross-env PLATFORM=server npm run webpack -- --watch",
    "build:all": "run-p --silent build:client build:server",
    "build:all:watch": "run-p --silent build:client:watch build:server:watch",
    "build": "npm run -s clean && npm run build:all",
    "build:prod": "npm run -s clean && cross-env NODE_ENV=production npm run build:all",
    "launch:server": "nodemon --quiet --watch build/.event/done --exec 'node build/server/index.js'",
    "launch:server:wait": "wait-on build/.event/done && npm run launch:server",
    "build:api": "cross-env PLATFORM=server webpack --config config/webpack.api.ts",
    "launch:api": "nodemon --quiet --watch build/api --exec 'node build/api/index.js'",
    "launch:api:watch": "cross-env PLATFORM=server webpack --config config/webpack.api.ts --watch",
    "start:all": "run-p --silent build:all:watch launch:server:wait launch:api:watch type-check:watch",
    "start:all:prod": "run-p --silent build:all build:api type-check && run-p --silent launch:server launch:api",
    "start": "npm run -s verify && npm run -s clean && npm run start:all",
    "start:prod": "npm run -s verify && npm run -s clean && cross-env NODE_ENV=production npm run start:all:prod",
    "pm2:start:prep": "run-s build:prod build:api",
    "pm2:start:web": "pm2 start build/server/index.js --name starter-web --time",
    "pm2:start:api": "pm2 start build/api/index.js --name starter-api --time",
    "pm2:start": "run-s pm2:start:prep pm2:start:web pm2:start:api",
    "pm2:stop": "pm2 stop starter-web starter-api",
    "pm2:logs": "pm2 logs starter-web",
    "build-ts": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "css-lint": "stylelint 'src/**/*.{css,scss}'",
    "css-lint:fix": "npm run css-lint -- --fix",
    "clean": "npx rimraf build node_modules/.cache",
    "clean:all": "npx rimraf build node_modules package-lock.json",
    "verify": "node scripts/verify.js",
    "blame": "git log -S",
    "hist": "git log --oneline | grep -i",
    "follow": "git log --follow",
    "blist": "npx browserslist",
    "blist:coverage": "npx browserslist --coverage",
    "blist:update": "npx browserslist@latest --update-db",
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "cloc": "npx cloc --exclude-list-file=.clocignore --exclude-dir=$(tr '\\n' ',' < .clocignore) ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baadal/starter-web.git"
  },
  "author": "Abhishek Raj <abhi@raj.me>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@loadable/babel-plugin": "^5.13.2",
    "@loadable/webpack-plugin": "^5.14.0",
    "@types/caniuse-lite": "^1.0.0",
